
@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>


<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreatedDate</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td><a asp-action="Update" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-sm btn-info">Update</a></td>
            </tr>
        }
    </tbody>
</table>
